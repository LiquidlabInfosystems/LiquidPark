<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LULU MALL MLCP STATUS"
        android:id="@+id/textView2"
        android:textColor="#FFD7CFCB"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:id="@+id/linearLayout1"
        android:clickable="true"
        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_alignBottom="@+id/textView4">
    <ProgressBar
        android:id="@+id/progressBarTotal"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/cpbtotal"
        android:background="@drawable/circle_shape"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="100"
        android:layout_weight="0.5" />

        <ProgressBar
            android:id="@+id/progressBarOccupied"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/cpboccupied"
            android:background="@drawable/circle_shape"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="100"
            android:layout_weight="0.5"
            android:layout_alignTop="@+id/progressBarAvailable"
            android:layout_alignParentEnd="true" />

    <ProgressBar
        android:id="@+id/progressBarAvailable"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/cpbavailable"
        android:background="@drawable/circle_shape"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="100"
        android:layout_weight="0.5"
        android:layout_alignTop="@+id/progressBarTotal"
        android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="65dp"
            android:textColor="#ffff00"
            android:textSize="30dp"
            android:id="@+id/textView6"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
                        android:textColor="#00CD00"
            android:textSize="30dp"
            android:id="@+id/textView9"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/progressBarTotal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="75dp"
            android:textColor="#00CD00"
            android:textSize="20dp"
            android:id="@+id/textView21"
            android:layout_above="@+id/textView9"
            android:layout_alignStart="@+id/progressBarOccupied"
            android:text="100%" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="65dp"
            android:textColor="#ffff00"
            android:textSize="20dp"
                        android:id="@+id/textView22"
            android:layout_alignTop="@+id/textView21"
            android:layout_alignParentStart="true"
            android:text="100%"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parking Occupancy Details"
        android:id="@+id/textView3"
        android:textColor="#FFD7CFCB"
        android:paddingBottom="10dp"
        android:textSize="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Spaces"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:paddingBottom="30dp"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:id="@+id/textView5"
        android:textColor="#ffffff"
        android:paddingBottom="20dp"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginEnd="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Spaces"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="36dp"
            android:id="@+id/textView"
            android:layout_alignStart="@+id/textView3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="#ffff00"
            android:textSize="16dp"
            android:layout_alignTop="@+id/textView"
            android:id="@+id/txtTotal"
            android:layout_alignEnd="@+id/txtAvailable"
            android:layout_alignStart="@+id/textView17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Spaces"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="#00CD00"
            android:textSize="16dp"
            android:layout_alignTop="@+id/textView7"
            android:id="@+id/txtAvailable"
            android:layout_alignEnd="@+id/txtOccupied"
            android:layout_alignStart="@+id/textView17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occupied Spaces"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="0"
            android:textColor="#ff0000"
            android:textSize="16dp"
            android:layout_alignTop="@+id/textView8"
            android:id="@+id/txtOccupied"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#626262"
        android:textAlignment="textEnd"
        android:textSize="16dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/textView10"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF2A282A"
        android:textColor="#FFFFFF"
        android:text="Level Details"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/btnZone"
        android:layout_above="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Levels"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:id="@+id/textView13"
        android:layout_above="@+id/txtTotal"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="50dp"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:id="@+id/textView17"
        android:layout_above="@+id/txtTotal"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnZone" />

</RelativeLayout>